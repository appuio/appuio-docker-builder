{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "appuio-docker-builder",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "appuio-docker-builder",
        "generation": 1,
        "creationTimestamp": null,
        "labels": {
          "app": "appuio-docker-builder"
        },
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewApp"
        }
      },
      "spec": {},
      "status": {
        "dockerImageRepository": ""
      }
    },
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "name": "rhel7",
        "labels": {
          "app": "appuio-docker-builder"
        }
      },
      "spec": {
        "dockerImageRepository": "registry.access.redhat.com/rhel7"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "appuio-docker-builder",
        "creationTimestamp": null,
        "labels": {
          "app": "appuio-docker-builder"
        },
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewApp"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "{GITHUB_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "Generic",
            "generic": {
              "secret": "${GENERIC_WEBHOOK_SECRET}"
            }
          },
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/appuio/appuio-docker-builder"
          },
          "secrets": [
            {
              "secret": {
                "name": "secret-buildvm"
              }
            }
          ]
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "rhel7:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "appuio-docker-builder:latest"
          }
        },
        "resources": {},
        "postCommit": {}
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "description": "GitHub trigger secret",
      "name": "GITHUB_WEBHOOK_SECRET",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "description": "Generic build trigger secret",
      "name": "GENERIC_WEBHOOK_SECRET",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    }
  ]
}
